# Database Configuration
DATABASE_URL=postgresql://cloudops:cloudops123@localhost:5432/cloudops_central
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=cloudops_central
DATABASE_USER=cloudops
DATABASE_PASSWORD=cloudops123

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Application Configuration
APP_NAME=CloudOps Central
APP_VERSION=1.0.0
APP_DESCRIPTION=Enterprise Infrastructure Management Platform
DEBUG=true
SECRET_KEY=your-super-secret-key-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Security
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30
BCRYPT_ROUNDS=12

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=cloudops-central-storage

# Azure Configuration (Optional)
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id

# GCP Configuration (Optional)
GCP_PROJECT_ID=your-gcp-project-id
GCP_CREDENTIALS_PATH=/path/to/service-account.json

# External Services
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=your-grafana-api-key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_USE_TLS=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Development
DEV_MODE=true
RELOAD=true

# Feature Flags
ENABLE_COST_OPTIMIZATION=true
ENABLE_POLICY_ENGINE=true
ENABLE_DRIFT_DETECTION=true
ENABLE_BACKUP_AUTOMATION=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=10

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=UTC

# Monitoring
SENTRY_DSN=your-sentry-dsn
ENABLE_METRICS=true
METRICS_PORT=8001